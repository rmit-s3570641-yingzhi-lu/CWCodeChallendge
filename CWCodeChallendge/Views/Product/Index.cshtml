@model List<ProductDto>

@{
    ViewBag.Title = "Products";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3>Product Lists</h3>
        </div>
        <div class="col">
        </div>
        <div class="col ">
            <a class="btn btn-success float-end" asp-action="Create">Create</a>
        </div>
    </div>
</div>

<table class="table table-striped table-hover text-center">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Price</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <input class="form-check-input" type="checkbox" value="" @(item.IsActive?"checked":"") disabled>
            </td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
